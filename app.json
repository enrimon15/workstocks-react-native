{
  "expo": {
    "name": "workstocks-react-native",
    "description": "App that helps you find the perfect job",
    "slug": "workstocks-react-native",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icona_app.png",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0078ff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/splash.png",
        "backgroundColor": "#0078ff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
